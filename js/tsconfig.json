{
"compilerOptions": {
    "noImplicitAny": true,
    "lib": ["dom", "es5", "es2015.promise", "es2015.iterable"],
    "noEmitOnError": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
        "./src/**/*"
  ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts"
  ]
}
